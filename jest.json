{
    "roots": ["<rootDir>/test"],
    "transform": {
        "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": ["'ts'", "tsx", "js", "jsx", "json", "node"],
    "coverageReporters": ["json", "text", "lcov", "clover"],
    "coverageThreshold": {
        "global": {
            "branches": 80,
            "functions": 80,
            "lines": 80,
            "statements": -10
        }
    },
    "coveragePathIgnorePatterns": ["/node_modules/"]
}
